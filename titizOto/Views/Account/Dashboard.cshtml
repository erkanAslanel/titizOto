@model ViewModel.Account.Dashboard.helperDashboard

@{
  
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}


<div class="wrapper">
    <div class="generalMainContainer">
        <div class="generalMainHeader contentBg"></div>
        <div class="generalMainContent contentBg">
            <div class="innerContent">

                @Html.Partial("breadCrumb", Model.breadCrumbItem)


                <ul class="leftMenu">

                    @foreach (var item in Model.leftMenuList)
                    {
                        <li class="@item.className"><a href="~/@item.url">@item.name</a></li>
                    }

                </ul>

                <div id="accountContainer">
                    <h1 class="accountTitle">@Model.title</h1>
                    <div class="pageContent mBottom0 mLeft0 mTop10">

                        @Html.Raw(Model.detail)

                    </div>

                    <div class="fLeft">

                        <div class="box mTop20 mRight40">
                            <div class="boxHeader"></div>
                            <div class="boxContent">
                                <div class="redText">@Resources.lang.registerInfo | <a href="~/@Model.registerInfoLink">@Resources.lang.edit</a>
                                </div>
                                <div>@Model.nameSurname</div>
                                <div>@Model.email</div>

                                 <div class="clearfix"></div>
                            </div>
                            <div class="boxFooter"></div>
                        </div>

                        <div class="box mTop20">
                            <div class="boxHeader"></div>
                            <div class="boxContent">
                                <div class="redText">@Resources.lang.newsletterSubscribe </div>
                           @using (Html.BeginForm()) 
                             {
                                    if (Model.isNewsletterRegister)
                                    { 
                                        <div>
                                            @Resources.lang.yourNewsletter     @Resources.lang.active

                                            <span class="newsletterIcon activeIcon"></span>

                                        </div>
                                        
                                        <div class="mTop10">
                                            <input class="btn clickDisable" type="submit" name="newsletterChange" value="@Resources.lang.setFalse"/>
                                        </div>
                                         
                                    }
                                    else
                                    { 
                                        <div>
                                            @Resources.lang.yourNewsletter          @Resources.lang.passive

                                            <span class="newsletterIcon pasiveIcon"></span>
                                        </div>
                                        
                                        <div class="mTop10">
                                            <input class="btn clickDisable" type="submit" name="newsletterChange" value="@Resources.lang.setTrue"/>

                                        </div>
                                    }
                                    
                                    
                                    @Html.AntiForgeryToken()

                               }
                                 <div class="clearfix"></div>
                            </div>
                            <div class="boxFooter"></div>

                            <div class="clearfix"></div>

                        </div>
                        <div class="clearfix"></div>

                        <div class="box mTop20 mRight40">
                            <div class="boxHeader"></div>
                            <div class="boxContent">
                                <div class="redText">@Resources.lang.accountAddres | <a href="~/@Model.registerAddressLink">@Resources.lang.edit</a>
                                </div>


                                 <div class="clearfix"></div>

                            </div>
                            <div class="boxFooter"></div>
                        </div>

                        <div class="box mTop20">
                            <div class="boxHeader"></div>
                            <div class="boxContent">
                                <div class="redText">@Resources.lang.accountOrder | <a href="~/@Model.registerOrderLink">@Resources.lang.showDetail</a>
                                </div>
                                 <div class="clearfix"></div>
                            </div>
                            <div class="boxFooter"></div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>

        </div>
        <div class="generalMainFooter contentBg"></div>
    </div>
</div>

@section scriptArea{

    <script id="titizJs" src="~/Content/js/core.js?modul=accountDashboard"></script>

}