@model ViewModel.Account.Address.helperAddress

@{
   
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

@section cssArea{

    <link href="~/Content/js/plugin/pop-up/magnific-popup.css" rel="stylesheet" />
  

}

<div class="wrapper">
    <div class="generalMainContainer">
        <div class="generalMainHeader contentBg"></div>
        <div class="generalMainContent contentBg">
            <div class="innerContent">

                @Html.Partial("breadCrumb", Model.breadCrumbItem)


                <ul class="leftMenu">

                    @foreach (var item in Model.leftMenuList)
                    {
                        <li class="@item.className"><a href="~/@item.url">@item.name</a></li>
                    }

                </ul>

                <div id="accountContainer">
                    <h1 class="accountTitle">@Model.title</h1>
                    <div class="pageContent mBottom0 mLeft0 mTop10">
                        @Html.Raw(Model.detail)
                    </div>

                    <div class="addresBoxContainer" data-userguid="@Model.userguid" data-lang="@ViewData["langCode"]">

                        <a class="tableCellVertical btn redBg newAddress mBottom20">Yeni Adres Ekle</a>
                        <div class="clearfix"></div>

                        @{ int tableIndex = 1;   }

                        @if (Model.addressList == null || Model.addressList.Count == 0)
                        {
                            <p>@Resources.lang.noAddressFind</p>
                        }

                        @foreach (var item in Model.addressList)
                        { 
                            <div class="addresBox">
                                <div class="table">
                                    <div class="tableCellVertical">
                                        <div class="t1">@item.name (@item.type)</div>
                                        <div class="t2">@Html.Raw(item.content)</div>
                                        <div class="t3"  data-addressid="@item.addressId">
                                            <a class="adresLink detail">Ayrıntılı Göster</a> | <a class="adresLink edit">Düzenle</a> | <a
                                                class="adresLink delete">Sil</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            { tableIndex = tableIndex + 1; }

                            if (tableIndex % 2 == 1)
                            {

                            <div class="clearfix"></div>

                            }
                        }


                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>

        </div>
        <div class="generalMainFooter contentBg"></div>
    </div>
</div>


@section scriptArea{

    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/4.0/jquery.validate.unobtrusive.js"></script>
    <script src="~/Content/js/plugin/pop-up/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/js/plugin/jquery.maskedinput.min.js"></script> 
    <script id="titizJs" src="~/Content/js/core.js?modul=accountAddress"></script>

}