@model ViewModel.Checkout.CheckoutOption.helperPageRegisterStatu
@{ 
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}


<div class="wrapper">
    <div class="generalMainContainer">
        <div class="generalMainHeader contentBg">
        </div>
        <div class="generalMainContent contentBg">
            <div class="innerContent">
                <div class="clearfix"></div>

                <div class="rightStep">

                    @Html.Partial("RightStep", new ViewModel.Checkout.rightStep(Model.stepLinkList, Model.activeStep))

                </div>

                <div class="checkoutContainer">

                    <h1 class="mainHeader staticHeader mLeft10">@Model.title</h1> 

                    <div class="pageContent checkoutStaticContent mLeft10">



                        <p class="checkoutDetail">@Html.Raw(Model.detail)</p>

                        <div class="checkoutForm mTop20">

                            @using (Html.BeginForm())
                            {

                                if (Model.isMessageExist)
                                {
                                @Html.Raw(Model.message)   
                                }
                            
                                <div class="item mBottom20">

                                    <div class="formRight">

                                        <div class="radioItem mBottom5">
                                            @Html.RadioButton("registerStatu", (int)ViewModel.Checkout.registerOption.guestUser)
                                            <span>@Resources.lang.checkoutRegisterStatuGuest</span>

                                        </div>

                                        <div class="radioItem">
                                            @Html.RadioButton("registerStatu", (int)ViewModel.Checkout.registerOption.registerOrLogin)
                                            <span>@Resources.lang.checkoutRegisterStatuRegisterOrLogin</span>

                                        </div>


                                    </div>
                                    <div class="error">
                                        @Html.ValidationMessageFor(a => a.registerStatu)
                                    </div>

                                </div>

                                <div class="submit">
                                    <button class="btn redBg clickDisable" data-checkvalidation=".checkoutForm form">@Resources.lang.checkoutContinue</button>
                                </div>
                                
                                @Html.AntiForgeryToken()

                            }

                        </div>

                    </div>

                    <div class="clearfix"></div>

                    <div class="checkoutBlock">
                        <span>1</span>
                        <h2>@Model.stepLinkList.Where(a => a.step == ViewModel.Checkout.checkoutStep.delivery).First().name
                        </h2>
                    </div>

                    <div class="checkoutBlock">
                        <span>2</span>
                        <h2>@Model.stepLinkList.Where(a => a.step == ViewModel.Checkout.checkoutStep.billing).First().name
                        </h2>
                    </div>

                    <div class="checkoutBlock">
                        <span>3</span>
                        <h2>@Model.stepLinkList.Where(a => a.step == ViewModel.Checkout.checkoutStep.cargo).First().name
                        </h2>
                    </div>

                    <div class="checkoutBlock">
                        <span>4</span>
                        <h2>@Model.stepLinkList.Where(a => a.step == ViewModel.Checkout.checkoutStep.payment).First().name
                        </h2>
                    </div>

                    <div class="checkoutBlock">
                        <span>5</span>
                        <h2>@Model.stepLinkList.Where(a => a.step == ViewModel.Checkout.checkoutStep.summary).First().name
                        </h2>
                    </div>

                    <div class="clearfix"></div>
                </div>

                <div class="clearfix"></div>
            </div>
        </div>
        <div class="generalMainFooter contentBg">
        </div>
    </div>
</div>

@section scriptArea{

    
    <script id="titizJs" src="~/Content/js/core.js?modul=checkoutRegisterStatu"></script>

}