@model ViewModel.LoginRegister.helperResetPassword

@{  
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}


<div class="wrapper">
    <div class="generalMainContainer">
        <div class="generalMainHeader contentBg">
        </div>
        <div class="generalMainContent contentBg">
            <div class="innerContent">
                @Html.Partial("breadCrumb", Model.breadCrumbItem)

                <h1 class="mainHeader staticHeader mLeft0">@Model.title</h1>
                <div class="pageContent mLeft0">

                    <div class="resetPasswordForm">
                        @using (Html.BeginForm())
                        { 
                            
                            @Html.AntiForgeryToken()
                            
                            if (Model.isMessageExist)
                            {
                            @Html.Raw(Model.message)   
                            }

                            if (!Model.isErrorExist)
                            {
                                
                            @Html.HiddenFor(a => a.userId)

                            @Html.HiddenFor(a => a.resetCode)
                         
                            <div class="item">
                                @Html.LabelFor(a => a.password, new { @class = "lbl" })
                                <div class="formRight">
                                    @Html.PasswordFor(a => a.password, new { @class = "input" })
                                </div>
                                <div class="error">
                                    @Html.ValidationMessageFor(a => a.password)
                                </div>
                            </div> 
                           
                            <div class="item">
                                @Html.LabelFor(a => a.passwordRep, new { @class = "lbl" })
                                <div class="formRight">
                                    @Html.PasswordFor(a => a.passwordRep, new { @class = "input" })
                                </div>
                                <div class="error">
                                    @Html.ValidationMessageFor(a => a.passwordRep)
                                </div>
                            </div>

                            <div class="submit">
                                <button class="btn redBg clickDisable" data-checkvalidation="form">@Resources.lang.save</button>
                            </div>
                                
                            }

                        }
                    </div>

                </div>

                <div class="clearfix"></div>
            </div>
        </div>
        <div class="generalMainFooter contentBg">
        </div>
    </div>
</div>

@section scriptArea{

    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/4.0/jquery.validate.unobtrusive.js"></script>
    <script id="titizJs" src="~/Content/js/core.js?modul=staticPage"></script>

}


