@model ViewModel.ProductList.helperBrandSelectProductList

@{
  
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}


<div class="wrapper">
    <div class="generalMainContainer">

        <div class="generalMainHeader contentBg">
        </div>
        <div class="generalMainContent contentBg">
            <div class="innerContent">

                @Html.Partial("breadCrumb", Model.breadCrumbItem)
                <h1 class="mainHeader">@Model.header</h1>

                <div class="clearfix"></div>
                <div class="modelListWithBrand">
                    <a href="@Model.brandWithModelList.brandUrl">@Model.brandWithModelList.brandName</a>
                    <div class="clearfix"></div>
                    <ul>

                        @foreach (var item in Model.brandWithModelList.modelList)
                        {
                            <li><a href="@item.modelUrl">@item.modelName</a></li>
                        }

                    </ul>
                </div>
                <div class="productList subPage">
                    @Html.Partial("productSmallList", Model.productList)
                </div>
                <div class="clearfix"></div>

                @if (Model.pagingItem.isPagingExist)
                {
                    <div id="paging" data-items="@Model.pagingItem.totalItems" data-current="@Model.pagingItem.currentPage" data-peritem="@Model.pagingItem.itemsPerPage" data-suffix="@Model.pagingItem.pageSufix">
                    </div>
                    <div class="clearfix"></div>
                }

            </div>
        </div>
        <div class="generalMainFooter contentBg">
        </div>
    </div>
</div>

@section scriptArea{

    <script src="~/Content/js/plugin/jquery.simplePagination.js"></script>
    <script id="titizJs" src="~/Content/js/core.js?modul=brandSelect&v=2"></script>

}