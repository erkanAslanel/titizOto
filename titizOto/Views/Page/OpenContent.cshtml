@model ViewModel.Page.helperOpenContent
@{
   
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="wrapper">
    <div class="generalMainContainer">
        <div class="generalMainHeader contentBg">
        </div>
        <div class="generalMainContent contentBg">
            <div class="innerContent">

                @Html.Partial("breadCrumb", Model.breadCrumbItem)



                <ul class="leftMenu">

                    @foreach (var item in Model.leftMenuList)
                    {
                        <li class="@item.className"><a href="@item.url">@item.name</a></li>
                    }

                </ul>

                <h1 class="mainHeader staticHeader">@Model.pageTitle</h1>

                <div class="pageContent openContentContainer">

                    <ul>
                        @foreach (var item in Model.list)
                        {
                            <li><a href="#">@item.title</a>
                                <div class="detail">@Html.Raw(item.detail)</div>
                            </li>
                        }
                    </ul>
                </div>

                <div class="clearfix"></div>
            </div>
        </div>
        <div class="generalMainFooter contentBg">
        </div>
    </div>
</div>

@section scriptArea{

    <script id="titizJs" src="~/Content/js/core.js?modul=openContent"></script>

}

