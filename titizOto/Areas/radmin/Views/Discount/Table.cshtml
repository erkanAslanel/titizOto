@model IEnumerable<tbl_discount>

<div class="head">
</div>
<form>
    @Html.Hidden("controlName", ViewContext.RouteData.Values["Controller"])
    <table cellpadding="0" cellspacing="0" border="0" class="display" id="indexTable">
        <thead>
            <tr>
                <th class="nosortable"></th>
                <th>#</th>

                <th>
                    @Html.DisplayNameFor(model => model.code)
                </th>
                  <th>
                    @Html.DisplayNameFor(model => model.description )
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.statu)
                </th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @{ int index = 1;
            }

            @foreach (var item in Model)
            {
                <tr class="gradeA">
                    <td class="center">
                        @Html.CheckBox("selectedItem", new { value = item.discountId })
                    </td>
                    <td class="center">@index</td>

                    <td class="center">
                        @Html.DisplayFor(modelItem => item.code)
                    </td>
                    <td class="center">
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td class="center">
                        @Html.getStatus(modelItem => item.statu)
                    </td>
                    <td class="center editBtn" data-id="@item.discountId">
                        <a title="Düzenle" class="btn14 mr5" href="@Url.Action("Edit", new { id = item.discountId })">
                            <img  src="@Url.Content("~/Areas/radmin/Content/images/icons/dark/pencil.png")"/></a>

                        <a title="Sil" data-action="delete" class="btn14 mr5 delete ajx">
                            <img  src="@Url.Content("~/Areas/radmin/Content/images/icons/dark/trash.png")"/></a>
                    </td>
                </tr>
                
                index = index + 1;
            }

        </tbody>
    </table>
</form>
