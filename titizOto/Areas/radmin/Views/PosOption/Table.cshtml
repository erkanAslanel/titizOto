@model IEnumerable<tbl_bankPosOption>

<div class="head">
</div>
<form>

    @Html.Hidden("controlName", ViewContext.RouteData.Values["Controller"])
    @Html.Hidden("filterId", ViewContext.RouteData.Values["filterId"])

    <table id="indexTable" border="0" cellpadding="0" cellspacing="0" class="display">

        <thead>
            <tr>
                <th class="nosortable"></th>

                <th>@Html.DisplayNameFor(model => model.paymentCount)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.statu)
                </th>
                <th>İşlem</th>
            </tr>
        </thead>

        <tbody>
            @{ int index = 1;
            }

            @foreach (var item in Model)
            {
                <tr class="gradeA">
                    <td class="center">
                        @Html.CheckBox("selectedItem", new { value = item.bankPosOptionId })
                    </td>

                    <td class="center">@item.paymentCount</td>

                    <td class="center">
                        @Html.getStatus(modelItem => item.statu)
                    </td>


                    <td class="center editBtn" data-id="@item.bankPosOptionId">

                        <a title="Düzenle" class="btn14 mr5" href="@Url.Action("Edit", new { id = item.bankPosOptionId, filterId = item.bankPosId })">
                            <img  src="@Url.Content("~/Areas/radmin/Content/images/icons/dark/pencil.png")"/></a>
                        <a class="btn14 mr5 delete ajx" data-action="deleteWithFilter" title="Sil">
                            <img  src="@Url.Content("~/Areas/radmin/Content/images/icons/dark/trash.png")"/></a>
                    </td>
                </tr>
                
                index = index + 1;
            }

        </tbody>
    </table>
</form>
