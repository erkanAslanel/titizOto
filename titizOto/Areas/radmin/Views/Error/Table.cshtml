@model IEnumerable<tbl_error>

<div class="head">
</div>
<form>
    @Html.Hidden("controlName", ViewContext.RouteData.Values["Controller"])
    <table cellpadding="0" cellspacing="0" border="0" class="display" id="indexTable">
        <thead>
            <tr>
                <th class="nosortable"></th>
                <th>#</th>

                <th>
                    @Html.DisplayNameFor(model => model.errorText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.saveDate)
                </th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @{ int index = 1;
            }

            @foreach (var item in Model)
            {
                <tr class="gradeA">
                    <td class="center">
                        @Html.CheckBox("selectedItem", new { value = item.errorId })
                    </td>
                    <td class="center">@index</td>

                    <td class="center">
                        @if (item.errorText.Length < 50)
                        { 
                            @item.errorText 
                        }
                        else
                        {
                            @item.errorText.Substring(0, 50)  @:...
                        }
                         
                       
                    </td>
                    <td class="center">
                        @item.saveDate.ToString("dd.MM.yyyy")
                    </td>
                    <td class="center editBtn" data-id="@item.errorId">
                        <a title="Düzenle" class="btn14 mr5" href="@Url.Action("Edit", new { id = item.errorId })">
                            <img  src="@Url.Content("~/Areas/radmin/Content/images/icons/dark/pencil.png")"/></a>

                        <a title="Sil" data-action="delete" class="btn14 mr5 delete ajx">
                            <img  src="@Url.Content("~/Areas/radmin/Content/images/icons/dark/trash.png")"/></a>
                    </td>
                </tr>
                
                        index = index + 1;
            }

        </tbody>
    </table>
</form>
