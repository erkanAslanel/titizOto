@{
    Layout = null;
    string title = "Giriş Ekranı " + "|" + " Titiz Oto";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@title</title> 
    <link href="@Url.Content("~/Areas/radmin/Content/css/main.css")" rel="stylesheet" type="text/css" />
    <link href="http://fonts.googleapis.com/css?family=Cuprum" rel="stylesheet" type="text/css" />
</head>

<body data-path="@Url.Content("~/")">

    <!-- Top navigation bar -->
    <div id="topNav">
        <div class="fixed">
            <div class="wrapper">
                <div class="backTo">
                    <a href="~/" title="">
                        <img src="~/Areas/radmin/Content/images/icons/topnav/mainWebsite.png" alt="" /><span>Main website</span></a>
                </div>
                <div class="userNav">
                    <ul>

                        <li><a href="mailto:info@reklam5.com" title="">
                            <img src="~/Areas/radmin/Content/images/icons/topnav/help.png" alt="" /><span>Destek</span></a></li>
                    </ul>
                </div>
                <div class="fix"></div>
            </div>
        </div>
    </div>

    <!-- Msg area -->
    @Html.Raw(ViewBag.Html)

    <!-- Login form area -->
    <div class="loginWrapper">
        <div class="loginLogo">
            <img src="@Url.Content("~/")Areas/radmin/Content/images/titizLogo.png" alt="" />
        </div>
        <div class="loginPanel">

            <div class="head">
                <h5 class="iUser">Yönetici Girişi</h5>
            </div>


            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "valid", @class = "mainForm" }))
            {
                <fieldset>
                    <div class="loginRow noborder">
                        <label for="req1">Email:</label>
                        <div class="loginInput">
                            <input type="text" name="login" class="validate[required,custom[email]]" id="req1" />
                        </div>
                        <div class="fix"></div>
                    </div>

                    <div class="loginRow">
                        <label for="req2">Şifre:</label>
                        <div class="loginInput">
                            <input type="password" name="password" class="validate[required]" id="req2" />
                        </div>
                        <div class="fix"></div>
                    </div>

                    <div class="loginRow">
                        <div class="rememberMe" >
                            <input type="checkbox" id="check2" name="chbox" /><label>Beni Hatırla</label>
                        </div>
                        <input type="submit" value="Giriş" class="greyishBtn submitForm" />
                        <div class="fix"></div>
                    </div>
                </fieldset>
            }

        </div>
    </div>

    <!-- Footer -->
    <div id="footer">
        <div class="wrapper">
            <span>© Copyright 2014. Titiz Oto</span>
        </div>
    </div>


    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/jquery-1.8.3.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/spinner/jquery.mousewheel.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/spinner/ui.spinner.js")"></script>
    <script type="text/javascript" src="@Url.Content("http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/fileManager/elfinder.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/wysiwyg/jquery.wysiwyg.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/wysiwyg/wysiwyg.image.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/wysiwyg/wysiwyg.link.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/wysiwyg/wysiwyg.table.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/flot/jquery.flot.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/flot/jquery.flot.pie.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/flot/excanvas.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/dataTables/jquery.dataTables.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/dataTables/colResizable.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/forms/forms.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/forms/autogrowtextarea.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/forms/autotab.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/forms/jquery.validationEngine-en.js")"></script>
