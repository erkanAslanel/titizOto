    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/jBreadCrumb.1.1.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/cal.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/jquery.collapsible.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/jquery.ToTop.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/jquery.listnav.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/jquery.sourcerer.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/jquery.tagsinput.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/jQuery.glob.tr.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/custom.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/radmin/Content/js/viewScript.js?modul=login")" id="reklam5"></script>
</body>
</html>
