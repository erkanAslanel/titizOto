@model IEnumerable<tbl_adminUser>

<div class="head">
</div>
<form>

    @Html.Hidden("controlName", ViewContext.RouteData.Values["Controller"])

    <table id="indexTable" border="0" cellpadding="0" cellspacing="0" class="display">

        <thead>
            <tr>
                <th class="nosortable"></th>
                <th>#</th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.surname)
                </th>
                <th>İşlem</th>
            </tr>
        </thead>

        <tbody>
            @{ int index = 1;
            }

            @foreach (var item in Model)
            {
                <tr class="gradeA">
                    <td class="center">
                        @Html.CheckBox("selectedItem", new { value = item.userId })
                    </td>
                    <td class="center">@index</td>
                    <td class="center">
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td class="center">
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td class="center">
                        @Html.DisplayFor(modelItem => item.surname)
                    </td>

                    <td class="center editBtn" data-id="@item.userId">
                        <a title="Düzenle" class="btn14 mr5" href="@Url.Action("Edit", new { id = item.userId })">
                            <img  src="@Url.Content("~/Areas/radmin/Content/images/icons/dark/pencil.png")"/></a>
                        <a class="btn14 mr5 delete ajx" data-action="delete" title="Sil">
                            <img  src="@Url.Content("~/Areas/radmin/Content/images/icons/dark/trash.png")"/></a>
                    </td>
                </tr>
                
                index = index + 1;
            }

        </tbody>
    </table>
</form>
