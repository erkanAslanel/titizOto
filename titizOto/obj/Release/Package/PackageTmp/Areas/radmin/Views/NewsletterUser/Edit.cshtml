@model tbl_newsletterUser

@{
    ViewBag.Title = Model.classTitle + " Düzenle";
    Layout = "~/Areas/radmin/Views/Shared/_LayoutPageAdmin.cshtml"; 
}

@if (ViewBag.success != null)
{
    
    @Html.Raw(ViewBag.resultHtml)
}


@using (Html.BeginForm("Edit", "NewsletterUser", FormMethod.Post, new { @class = "mainForm" }))
{  
    @Html.ValidationSummary(null, new { @class = "validationInfo hideit" }) 
    
    <div class="title">
        <h5>@Model.classTitle Düzenleme(@Model.email)</h5>
    </div> 

    <!--Upload-->
    @Html.AntiForgeryToken()

   

    <fieldset>
        <div class="widget">

            <!--Tabs-->
            <ul class="tabs">
                <li><a href="#tab1">İçerik</a></li>

            </ul>

            <!--Column-->
            <div class="tab_container">

                <div id="tab1" class="tab_content">

                    <!--newsletterUserId -->
                    @Html.HiddenFor(a => a.newsletterUserId, new { @id = "primaryKey" })

                    <!--email -->
                    <div class="rowElem">@Html.LabelFor(a => a.email)<div class="formRight">@Html.TextBoxFor(a => a.email, new { disabled = "disabled", @readonly = "readonly" })<label class="error">@Html.ValidationMessageFor(a => a.email)</label>
                        </div>
                        <div class="fix"></div>
                    </div>

                    <!--ipNo -->
                    <div class="rowElem">@Html.LabelFor(a => a.ipNo)<div class="formRight">@Html.TextBoxFor(a => a.ipNo, new { disabled = "disabled", @readonly = "readonly" })<label class="error">@Html.ValidationMessageFor(a => a.ipNo)</label>
                        </div>
                        <div class="fix"></div>
                    </div>

                    <!--createTime -->
                    <div class="rowElem">@Html.LabelFor(a => a.createTime)<div class="formRight">@Html.TextBoxFor(a => a.createTime)<label
                        class="error">@Html.ValidationMessageFor(a => a.createTime)</label></div>
                        <div class="fix"></div>
                    </div>

                </div>
            </div>
            <div class="fix"></div>
        </div>
    </fieldset>  
    
    <div class="fix" style="height: 20px"></div>
   
    <!--Buttons-->
                      
  
                       
    <a class="greyishBtn button floatright" href="@Url.Action("Index")" >Geri Dön </a>    
    
}