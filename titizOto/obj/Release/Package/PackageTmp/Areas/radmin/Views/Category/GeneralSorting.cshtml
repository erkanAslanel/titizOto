@{
    ViewBag.Title = "GeneralSorting";
    Layout = "~/Areas/radmin/Views/Shared/_LayoutPageAdmin.cshtml";
}



@{
    ViewBag.Title = "Kategori" + " Sıralama";
    Layout = "~/Areas/radmin/Views/Shared/_LayoutPageAdmin.cshtml"; 
}

@if (ViewBag.success != null)
{ 
    @Html.Raw(ViewBag.resultHtml)
}


@using (Html.BeginForm("GeneralSorting", "Category", FormMethod.Post, new { @class = "mainForm" }))
{  
    @Html.ValidationSummary(null, new { @class = "validationInfo hideit" }) 
    
    <div class="title">
        <h5>Kategori Sıralama</h5>
        <a></a>
    </div> 

    <!--Upload-->
    @Html.AntiForgeryToken()

   
    <fieldset>
        <div class="widget">

            <!--Tabs-->
            <ul class="tabs">
                <li><a href="#tab1">Kategori Sıralama</a></li>

            </ul>

            <!--Column-->
            <div class="tab_container">

                <div id="tab1" class="tab_content">
                    <ol class="sortable">
                        @Html.Raw(ViewData["sorting"])
                    </ol>
                    @Html.Hidden("sortArray")

                </div>


            </div>

            <div class="fix"></div>
        </div>
    </fieldset>  
    
    <div class="fix" style="height: 20px"></div>
   
    <!--Buttons-->
    
    <input type="submit" value="Kaydet" class="redBtn submitForm" />
    
    <a class="greyishBtn button floatright" href="@Url.Action("Index")">Geri Dön </a>    
    
}

